  <main>
    <h1>Projects</h1>
    <section class="cards-grid">
      <Card project={projects}/>
    </section>
    <a class="button-primary" href="https://github.com/dnlambb?tab=repositories" text-glitch="Moreprojects">More projects</a>
  </main>
</MainLayout>

<style lang="scss">
@import "../styles/colors.scss";
@import "../styles/button-primary.scss";

main {
  width: 100%;
  padding: 10rem 2rem;
  display: flex;
  flex-direction: column;

  h1 {
    color: $orange-light;
    text-align: center;
  }
  .cards-grid {
    margin: 4rem 0 6rem;
    display: flex;
    flex-direction: column;
    gap: 4rem;

    &__project {
      margin: 0 auto;
      width: 40rem;
      background-color: red;
    }
  }

}
@media (min-width: 768px) {
  main {
    .cards-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
  }
}
@media (min-width: 2000px) {
  main {
    .cards-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
}
</style>