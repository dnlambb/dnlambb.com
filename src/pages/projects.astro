    urlWeb: "https://dnlambb.github.io/github-user-search/"
  },
  FyloLanding: {
    tag: "Html - Sass",
    title: "Fylo Landing Page",
    desc: "Layout of a landing page based on the design of the Frontend Mentor challenge",
    urlImg: "/assets/projects/fylo-landing.jpg",
    urlRepo: "https://github.com/dnlambb/fylo-landing-page",
    urlWeb: "https://dnlambb.github.io/fylo-landing-page/",
  },
  GoogleClon: {
    tag: "Html - Css",
    title: "Google Clon",
    desc: "Layout of the Google browser design",
    urlImg: "/assets/projects/google-clon.jpg",
    urlRepo: "https://github.com/dnlambb/google-clon",
    urlWeb: "https://dnlambb.github.io/google-clon/",
  },
  TimerUnderConstruction: {
    tag: "JS - Css",
