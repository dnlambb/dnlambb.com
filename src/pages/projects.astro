---

<MainLayout
  lang="en"
  title="Daniel Cordero â€¢ Projects"
  description="I'm Daniel Cordero, Frontend Developer. Here you can see and find information about my projects."
>
  <main>
    <h1>Projects</h1>
    <section class="cards-grid">
      <Card project={projects}/>
    </section>
    <a class="button-primary" href="https://github.com/dnlambb?tab=repositories" button-glitch="Moreprojects">More projects</a>
  </main>
</MainLayout>

<style lang="scss">
@import "../styles/colors.scss";
@import "../styles/button-primary.scss";

main {
  width: 100%;
  padding: 8rem 1.25rem 6.25rem;
  display: flex;
  flex-direction: column;

  h1 {
    color: $primary;
    text-align: center;
  }
  .cards-grid {
    margin: 3.75rem 0 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }
}
@media (min-width: 768px) {
  main {
    .cards-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
    }
  }
}
@media (min-width: 2000px) {
  main {
    .cards-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
}
</style>