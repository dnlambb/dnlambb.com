---
import MainLayout from "../../layouts/MainLayout.astro";
import CardLink from "../../components/CardLink.astro";
import Tooltip from "../../components/Tooltip.vue";
import CardProject from "../../components/CardProject.vue";

const pinProjects = {
  FyloLanding: {
    tag: "Html - Sass",
    title: "Fylo Landing Page",
    desc: "Solución del reto de Frontend Mentor",
    urlImg: "/assets/projects/fylo-landing.jpg",
    urlRepo: "https://github.com/dnlambb/fylo-landing-page",
    urlWeb: "https://dnlambb.github.io/fylo-landing-page/",
  },
  ApiIp: {
    tag: "JS - Pico.css",
    title: "API IP",
    desc: "Consumir una API para devolver la información del proveedor de IP",
    urlImg: "/assets/projects/api-ip.png",
    urlRepo: "https://github.com/dnlambb/API-IP",
    urlWeb: "https://dnlambb.github.io/API-IP/",
  },
}
---

<MainLayout
  lang="es"
  title="Daniel Cordero • @dnlambb"
  description="Hola, soy Daniel Cordero, Frontend Developer. Chile."
>
  <main>
    <section class="home-header">
      <div class="order-reverse-items">
        <h1 class="text-glitch" text-glitch="Daniel Cordero">Daniel Cordero</h1>
        <p>Hola, soy</p>
      </div>
      <h2>Frontend Developer</h2>
      <p>
        Aquí puedes conocer sobre mí, mis proyectos, mi educación, certificados y como contactarme.
      </p>
      <ul role="list" class="link-card-grid">
        <CardLink
          href="https://github.com/dnlambb/dnlambb.com"
          title="Repositorio"
          body="El repositorio de este sitio web en GitHub."
        />
      </ul>
      <ul class="list-social">
        <Tooltip string-tooltip="GitHub">
          <li>
            <a href="https://github.com/dnlambb">
              <img src="/assets/social/github.svg" alt="Github" />
            </a>
          </li>
        </Tooltip>
        <Tooltip string-tooltip="Linkedin">
          <li>
            <a
              href="https://www.linkedin.com/in/daniel-cordero-mel%C3%A9ndez-528b11224/"
            >
              <img src="/assets/social/linkedin.svg" alt="Linkedin" />
            </a>
          </li>
        </Tooltip>
      </ul>
    </section>
    <section class="home-pin-projects">
			<h3>Proyectos</h3>
			<div class="home-pin-projects__container-projects">
				<CardProject project={pinProjects}/>
			</div>
			<a href="/es/projects" class="button-primary" button-glitch="Vertodos">Ver todos</a>
		</section>
  </main>
</MainLayout>

<style lang="scss">
@import "../../styles/colors.scss";
@import "../../styles/text-glitch.scss";
@import "../../styles/button-primary.scss";
main {
  width: 100%;
  .home-header {
    width: 100%;
    min-height: 100vh;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: url("/public/assets/wave.svg") no-repeat center;
    background-size: cover;
    .order-reverse-items {
      display: flex;
      flex-direction: column-reverse;
    }
    h1 {
      width: fit-content;
      margin: 0 auto;
      text-align: center;
      color: $primary;
      user-select: none;
    }
    h2 {
      width: fit-content;
      margin: 1rem auto 3rem;
      text-align: center;
      color: $primary;
    }
    p {
      text-align: center;
      line-height: 1.6;
    }
    .link-card-grid {
      width: fit-content;
      margin: 5.5rem auto;
      display: grid;
      grid-template-columns: repeat(1, 1fr);
    }
    .list-social {
      width: fit-content;
      margin: 0 auto;
      list-style: none;
      display: flex;
      gap: 3rem;
      img {
        width: 5rem;
      }
    }
  }
  .home-pin-projects {
    text-align: center;
    padding: 0 2rem 5rem;
    &__container-projects {
      padding: 5rem 0;
      display: flex;
      flex-direction: column;
      gap: 4rem;
    }
  }
}
@media (min-width: 440px) {
  main {
    .home-header {
      h1 {
        letter-spacing: 1rem;
      }
    }
  }
}
@media (min-width: 1024px) {
  main {
    .home-pin-projects {
      &__container-projects {
        flex-direction: row;
      }
    }
  }
}
</style>
  