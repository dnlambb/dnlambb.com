---
import MainLayout from "../layouts/MainLayout.astro";
import CardLink from "../components/CardLink.astro";
import Tooltip from "../components/Tooltip.vue";
---

<MainLayout
  lang="en"
  title="Daniel Cordero â€¢ @dnlambb"
  description="I'm Daniel Cordero, Frontend Developer. Chile."
>
  <main>
    <section>
      <div class="order-reverse-items">
        <h1 class="text-glitch" text-glitch="Daniel Cordero">Daniel Cordero</h1>
        <p>Hi there, I'm</p>
      </div>
      <h2>Frontend Developer</h2>
      <p>
        Here you can know about me, see my projects, my education, certificates
        and how to contact me.
      </p>
      <ul role="list" class="link-card-grid">
        <CardLink
          href="https://github.com/dnlambb/dnlambb.com"
          title="Repository"
          body="The repository of this website in GitHub."
        />
      </ul>
      <ul class="list-social">
        <Tooltip string-tooltip="GitHub">
          <li>
            <a href="https://github.com/dnlambb">
              <img src="/assets/social/github.svg" alt="Github" />
            </a>
          </li>
        </Tooltip>
        <Tooltip string-tooltip="Linkedin">
          <li>
            <a
              href="https://www.linkedin.com/in/daniel-cordero-mel%C3%A9ndez-528b11224/"
            >
              <img src="/assets/social/linkedin.svg" alt="Linkedin" />
            </a>
          </li>
        </Tooltip>
      </ul>
    </section>
  </main>
</MainLayout>

<style lang="scss">
@import "../styles/colors.scss";
@import "../styles/text-glitch.scss";
main {
	width: 100%;
	min-height: 100vh;
	display: flex;
	justify-content: center;
	align-items: center;
	background: url("/public/assets/wave.svg") no-repeat center;
	background-size: cover;
	section {
		width: fit-content;
		padding: 2rem;
		.order-reverse-items {
			display: flex;
			flex-direction: column-reverse;
		}
		h1 {
			width: fit-content;
			margin: 0 auto;
			text-align: center;
			color: $primary;
			user-select: none;
		}
		h2 {
			width: fit-content;
			margin: 1rem auto 3rem;
			text-align: center;
			color: $primary;
		}
		p {
			text-align: center;
			line-height: 1.6;
		}
		.link-card-grid {
			width: fit-content;
			margin: 5.5rem auto;
			display: grid;
			grid-template-columns: repeat(1, 1fr);
		}
		.list-social {
			width: fit-content;
			margin: 0 auto;
			list-style: none;
			display: flex;
			gap: 3rem;
			img {
				width: 5rem;
			}
		}
	}
}
@media (min-width: 440px) {
	main {
		section {
			h1 {
				letter-spacing: 1rem;
			}
		}
	}
}
</style>
