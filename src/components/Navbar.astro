---
import MenuLinks from "./MenuLinks.astro";

export interface Props {
  language: string;
}
const { language, href } = Astro.props;

let links = {}
let currentHref;
let changeLanguage;

if (language == "English") {
  changeLanguage = "/"
  currentHref = "/es"
  links = {
    home: {
      text: "Home",
      href: "/es",
    },
    about: {
      text: "Sobre",
      href: "/es/about",
    },
    projects: {
      text: "Proyectos",
      href: "/es/projects",
    },
    education: {
      text: "Educaci√≥n",
      href: "/es/education",
    },
    contact: {
      text: "Contacto",
      href: "/es/contact",
    },
  }
}
else {
  currentHref = "/"
  changeLanguage = "/es"
  links = {
    home: {
      text: "Home",
      href: "/",
    },
    about: {
      text: "About",
      href: "/about",
    },
    projects: {
      text: "Projects",
      href: "/projects",
    },
    education: {
      text: "Education",
      href: "/education",
    },
    contact: {
      text: "Contact",
      href: "/contact",
    },
  }
}
---

<header>
  <nav>
    <a href={currentHref} class="brand-link">
      <img src="/assets/lamb.svg" alt="lamb icon with link to home page" />
    </a>
    <a href={changeLanguage}>{language}</a>
    <MenuLinks links={links} />
  </nav>
</header>

<style lang="scss">
  @import "../styles/colors.scss";

  header {
    position: fixed;
    z-index: 5;
    width: 100%;
    height: fit-content;
    padding: 0 2rem;
    border-bottom: 1px solid rgba(244, 244, 244, 0.6);
    background: rgba(26, 28, 32, 0.9);

    nav {
      width: 100%;
      height: 100%;
      margin: 0.5rem 0;
      display: flex;
      align-items: center;
      justify-content: space-between;

      .brand-link {
        width: fit-content;
        height: fit-content;
        img {
          width: 4rem;
          background: $secondary;
          border-radius: 100%;
        }
      }
      a {
        text-decoration: none;
      }
      a:hover {
        color: $primary;
      }
    }
  }
  @media (min-width: 768px) {
    header {
      padding: 0 4rem;
      flex-direction: row;
    }
  }
</style>
