---
export interface Props {
  heading: string;
  randomFacts: object;
}

const { heading, randomFacts } = Astro.props;
---
<section>
  <h3>{heading}</h3>
  <ul>
    <li><img src="/assets/randomFacts/dog.svg" alt="dog" />{randomFacts.item1}</li>
    <li><img src="/assets/randomFacts/coffee.svg" alt="coffee" />{randomFacts.item2}</li>
    <li>
      <img src="/assets/randomFacts/volleyball.svg" alt="ball of volleyball" />
      {randomFacts.item3}
    </li>
  </ul>
</section>
<style lang="scss">
@import "../styles/colors.scss";
section {
  width: fit-content;
  margin: 8rem auto;
  padding: 0 2rem;
  h3 {
    margin-bottom: 3rem;
    text-align: center;
    color: $primary;
  }
  ul {
    max-width: max-content;
    margin: 0 auto;
    list-style: none;

    li {
      margin: 1rem 0;
      display: flex;
      align-items: center;
      gap: 2rem;

      img {
        width: 4rem;
      }
    }
  }
}
@media (min-width: 768px) {
  section {
    ul {
      li {
        margin: 2rem 0;
        img {
          width: 5rem;
        }
      }
    }
  }
}
@media (min-width: 1024px) {
  section {
    ul {
      display: flex;
      gap: 8rem;
      li {
        img {
          width: 5.4rem;
        }
      }
    }
  }
}
</style>