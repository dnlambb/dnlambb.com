---
import EndMessage from "./EndMessage.vue";
import CardLink from "./CardLink.astro";

let year = new Date().getFullYear();
---

<footer>
  <ul role="list" class="link-card-grid">
    <CardLink
      href="https://github.com/dnlambb/dnlambb.com"
      title="Repository"
      body="The repository of this website in GitHub."
    />
  </ul>
  <EndMessage message="Built by Daniel Cordero with love" />
  <p class="license">
    <a href="http://creativecommons.org/licenses/by-nc-sa/4.0/">
      CC BY-NC-SA 4.0
    </a>
    {year} &copy; Daniel Cordero
  </p>
</footer>

<style lang="scss">
  @import "../styles/colors.scss";

  footer {
    width: 100%;
    padding: 4rem 1.25rem;
    overflow: hidden;
    background: url('/assets/wave-bottom.svg') no-repeat center;
		background-size: cover;

    .link-card-grid {
			width: 80%;
			margin: 3.438rem auto;
      padding-top: 2rem;
			display: flex;
      justify-content: center;
      gap: 1.25rem;
		}
    .license {
      margin: 2.5rem auto 0;
      text-align: center;
      color: $secondary;
      a {
        text-decoration: underline;
      }
      a:hover {
        text-decoration: underline $primary;
        transition: 300ms;
      }
    }
  }
</style>
