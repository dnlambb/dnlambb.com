---
export interface Props {
  links: object;
}
const { links } = Astro.props;
---
<input id="menu-checkbox" type="checkbox" />
<label class="menu-icon-container" for="menu-checkbox">
  <img class="icon" src="/assets/menu.svg" alt="menu icon" />
</label>
<ul class="list-links">
  <li><a href={links.home.href}>{links.home.text}</a></li>
  <li><a href={links.about.href}>{links.about.text}</a></li>
  <li><a href={links.projects.href}>{links.projects.text}</a></li>
  <li><a href={links.education.href}>{links.education.text}</a></li>
  <li><a href={links.contact.href}>{links.contact.text}</a></li>
</ul>

<style lang="scss">
  @import "../styles/colors.scss";

  .list-links {
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: row;
    list-style-type: none;
    & > li {
      margin: 0 0.625rem;
      overflow: hidden;
    }
    & li a {
      text-decoration: none;
    }
    & a:is(:hover, :active) {
      color: $primary;
    }
  }

  .menu-icon-container {
    height: 100%;
    width: fit-content;
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    .icon {
      width: 45px;
    }
  }

  #menu-checkbox {
    display: none;
  }

  @media (max-width: 700px) {
    .menu-icon-container {
      display: flex;
    }
    .list-links {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      margin-top: 50px;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    #menu-checkbox ~ .list-links li {
      height: 0;
      margin: 0;
      padding: 0;
      border: 0;
      transition: height 400ms cubic-bezier(0.23, 1, 0.32, 1);
    }
    #menu-checkbox:checked ~ .list-links li {
      height: 40px;
      padding: 8px;
      border: 1px solid #292D33;
      transition: height 400ms cubic-bezier(0.23, 1, 0.32, 1);
    }
    .list-links > li {
      width: 100%;
      margin: 0;
      padding: 0.5rem 0;
      color: $secondary;
      display: flex;
      justify-content: center;
      background-color: #1A1C20;
    }
    .list-links > li:not(:last-child) {
      border-bottom: 1px solid #292D33;
    }
  }
</style>
